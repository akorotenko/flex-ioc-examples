<?xml version="1.0" encoding="utf-8"?>
<mx:Panel 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	height="100%"
	title="Friends"
	width="100%" xmlns:user="com.adobe.dashboard.presentationModel.user.*" xmlns:flicc="http://flicc.sourceforge.net">
	
	<flicc:Configure
		objectId="friendsClient"
		target="{ pm }" />
		
	<user:FriendsPM id="pm"/>
	
	<mx:DataGrid
		width="100%"
		height="100%"
		dataProvider="{ pm.friends.friendsList }">
		<mx:columns>
			<mx:DataGridColumn dataField="forename"/>
			<mx:DataGridColumn dataField="surname"/>
			<mx:DataGridColumn dataField="nickname"/>
		</mx:columns>
	</mx:DataGrid>
</mx:Panel>
