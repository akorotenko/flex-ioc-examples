<?xml version="1.0" encoding="utf-8"?>
<mx:Panel
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:injection="flicc.injection.*" 
	xmlns:view="ac.iocsample.populatedomain.view.*"
	title="populatedomain" 
	width="100%" height="100%"
	addedToStage="populateBackend()">
	<mx:Script>
		<![CDATA[
			import org.swizframework.Swiz;
			import ac.iocsample.populatedomain.model.pm.OtherPM;
			import ac.iocsample.populatedomain.model.pm.MainPM;
			
			[Bindable]
			[Autowire(bean="mainPM")]
			public var mainPM : MainPM;
			
			[Bindable]
			[Autowire(bean="otherPM")]
			public var otherPM : OtherPM;
			
			private function populateBackend() : void
			{
				mainPM.populateBackend();
			}
		]]>
	</mx:Script>
	<mx:Text 
		text="This sample looks at how domains are populated"/>
	<mx:Text 
		text="In the standard cairngorm approach you use the model locator to retrieve your domain"/>
	<mx:HBox
		borderStyle="none">
		<view:MainView
				mainPM="{ mainPM }" />
		<view:OtherView
			otherPM="{ otherPM }"/>
	</mx:HBox>
			
			
</mx:Panel>
