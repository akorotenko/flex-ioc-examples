<?xml version="1.0" encoding="utf-8"?>
<mx:Object 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:actions="com.adobe.samplestore.ioc.actions.*"
	xmlns:assets="com.adobe.samplestore.view.assets.*"
	xmlns:business="com.adobe.samplestore.business.*"
	xmlns:domain="com.adobe.samplestore.model.domain.*"
	xmlns:launcher="com.adobe.samplestore.model.pm.checkout.*"
	xmlns:messages="com.adobe.samplestore.view.messages.*"
	xmlns:order="com.adobe.samplestore.model.domain.order.*"
	xmlns:pm="com.adobe.samplestore.model.pm.*"
	xmlns:productchooser="com.adobe.samplestore.model.pm.productchooser.*"
	xmlns:shoppingcart="com.adobe.samplestore.model.domain.shoppingcart.*"
	xmlns:spicefactory="http://www.spicefactory.org/parsley"
	xmlns:util="com.adobe.samplestore.util.*"
	xmlns="*">

	<messages:MessageLauncher/>
	<util:Comparator/>
	<mx:CurrencyFormatter
		precision="2"/>

	<order:Order />
	<shoppingcart:ShoppingCart id="shoppingCart"/>
	<domain:Products/>
	<order:CustomerDetails/>
	<order:PaymentDetails/>

	
	<!-- pms -->
	<pm:ShoppingCartPM/>
	<spicefactory:Object type="{ ProductDetailsPM }"/>
	<productchooser:FilterControlsPM/>
	<pm:ProductsAndCheckoutControlBarPM/>
	
	<pm:ProductsAndCheckoutPM id="productsAndCheckoutPM">
		<pm:children>
			<mx:ArrayCollection>
				<!-- TODO: get best practice on configuring sub objects.
					//i need to add an id here to get the injection to work
				-->
				<productchooser:GraphicalProductListPM 
					id="graphicalProductsPM"/>
				<productchooser:TextualProductListPM
					id="textualProductsPM"/>
				<launcher:CheckoutPM 
					id="checkoutPM">
					<launcher:children>
						<mx:ArrayCollection>
							<launcher:GeneralInformationPM 
								id="generalInformationPM"/>
							<launcher:ShippingInformationPM 
								id="shippingInformationPM"
								deliverable="{ shoppingCart }"/>
							<launcher:PaymentInformationPM
								id="paymentInformationPM"/>
							</mx:ArrayCollection>
					</launcher:children>
				</launcher:CheckoutPM>
			</mx:ArrayCollection>
		</pm:children>
	</pm:ProductsAndCheckoutPM>
	
	
	<!-- actions -->
	<actions:GetProductsAction/>
	<actions:SortProductsAction/>
	<actions:FilterProductsAction/>
	<actions:AuthoriseCreditCardAction/>
	<actions:CompletePurchaseAction/>
	
	<!-- delegates -->
	<business:ProductDelegateStub/>
	<business:CreditCardDelegateStub/>
	
	<mx:Script>
		<![CDATA[
			import com.adobe.samplestore.model.pm.productdetails.ProductDetailsPM;
		]]>
	</mx:Script>
	
</mx:Object>
