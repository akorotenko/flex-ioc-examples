<project name="LOCAL_BUILD" default="remove.svn.from.bin.folder" basedir="..">
	<target name="remove.svn.from.bin.folder">
		<echo>deleting..</echo>
		<echo>${basedir}</echo>
		 <delete 
		 	verbose="true"
		 	includeemptydirs="true">
    		<fileset dir="${basedir}/bin-debug" defaultexcludes="false">
    			  <include name="**/.svn/" />  
    		</fileset>
		 </delete>

	</target>
</project>
