<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:control="ac.iocsample.control.*"
	preinitialize="preInit()"
	creationComplete="init()"
	layout="vertical" xmlns:pm="ac.iocsample.passtheparcel.model.pm.*" 
	xmlns:view="ac.iocsample.passtheparcel.view.*" 
	xmlns:backendview="ac.iocsample.populatedomain.view.*" 
	xmlns:control1="ac.iocsample.populatedomain.control.*" viewSourceURL="srcview/index.html">
	<mx:Script>
		<![CDATA[
			import ac.iocsample.prana.factory.PranaFactory;
			import org.pranaframework.context.support.XMLApplicationContext;
			import ac.iocsample.populatedomain.model.domain.BackendModelLocator;
			import ac.iocsample.populatedomain.model.pm.BackendPM;
			import ac.iocsample.populatedomain.model.pm.OtherPM;
			import ac.iocsample.passtheparcel.model.pm.StartPM;
			import ac.iocsample.passtheparcel.model.domain.PTPModelLocator;

			[Bindable]
			private var startPM : StartPM;
			
			private function preInit() : void
			{
				PranaFactory.init();
			}

			private function init() : void
			{
				startPM = new StartPM();
			}
			
		]]>
	</mx:Script>
	<mx:Style source="styles/Style.css" />
	
	<control1:BackendController />
	<mx:Panel 
		width="100%"
		height="100%"
		title="Pass the parcel">
		<mx:Text
			width="100%"
			text="This is when a model reference is passed into an object for the sole purpose of passing it onto another object."/>
		
		<view:StartView
			startPM="{ startPM }" />
			
	</mx:Panel>

	<backendview:RootView/>

</mx:Application>
