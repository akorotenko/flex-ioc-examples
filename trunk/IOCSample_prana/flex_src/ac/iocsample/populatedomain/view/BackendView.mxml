<?xml version="1.0" encoding="utf-8"?>
<mx:Panel 
	title="This is the backend view - it requests the domain to be poulated"
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	creationComplete="init()"
	layout="vertical">
	<mx:Script>
		<![CDATA[
			import ac.iocsample.prana.factory.PranaFactory;
			import org.pranaframework.context.support.XMLApplicationContext;
			import ac.iocsample.populatedomain.model.pm.BackendPM;
			
			[Bindable]
			public var backendPM : BackendPM;
			

		    private function init() : void 
		    {
				backendPM = PranaFactory.getObject("backendPM");
		    }

		]]>
	</mx:Script>
	<mx:Label
		text="{ backendPM.backend.uniqueId }" />
	<mx:TextInput
		id="input"
		restrict="0-9"
		text="{ backendPM.backend.uniqueId }"
		change="backendPM.backend.uniqueId = Number(input.text)"/>
</mx:Panel>
